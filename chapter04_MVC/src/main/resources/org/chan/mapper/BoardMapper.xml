<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chan.mapper.BoardMapper">
	<!-- 전체 데이터 가져오기 -->
	<select id="getList" resultType="org.chan.domain.BoardVO">
		SELECT * FROM tbl_board
	</select>
	
	<!-- 데이터 삽입 -->
	<insert id="insert" parameterType="org.chan.domain.BoardVO">
		INSERT INTO tbl_board VALUES (seq_board.nextval, #{title}, #{content}, #{writer}, sysdate, sysdate)
	</insert>
	
	<!-- 기본키로 데이터 가져오기 -->
	<select id="read" parameterType="int" resultType="org.chan.domain.BoardVO">
		SELECT * FROM tbl_board WHERE bno=#{bno}
	</select>
	
	<!-- 기본키로 데이터 삭제 -->
	<delete id="delete" parameterType="int">
		DELETE FROM tbl_board WHERE bno=#{bno}
	</delete>
	
	<!-- 기본키로 제목, 내용, 작성자 변경 -->
	<update id="update" parameterType="org.chan.domain.BoardVO">
		UPDATE tbl_board SET title=#{title}, content=#{content}, writer=#{writer}, 
		updatedate=sysdate WHERE bno=#{bno}
	</update>
</mapper>
