<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
	<!-- Beans -->
	<bean id="customAccessDenied" class="org.chan.security.CustomAccessDeniedHandler"></bean>
	<bean id="customLoginSuccess" class="org.chan.security.CustomLoginSuccessHandler"></bean>
	<!-- 비밀번호를 인코딩 해주는 객체 -->
	<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></bean>
	
	<!-- HTTP 통신 보안 구성 요소 -->
	<security:http auto-config="true">
		<security:intercept-url pattern="/sample/all" access="permitAll"/>
		<security:intercept-url pattern="/sample/member" access="hasRole('ROLE_MANAGER')"/>
		<security:intercept-url pattern="/sample/admin" access="hasRole('ROLE_ADMIN')"/>
		
		<!-- 기본 로그인 페이지 대신 custom한 로그인 페이지로 이동시킴 로그인에 성공시 Handler가 가로채서 그 이후를 처리하게 만듬 -->
		<!-- <security:form-login/> -->
		<security:form-login login-page="/customLogin" authentication-success-handler-ref="customLoginSuccess"/>
		
		<!-- 로그 아웃 url 지정, 로그 아웃시 세션 삭제 여부 -->
		<security:logout logout-url="/customLogout" invalidate-session="true"/>
		
		<!-- 로그인 실패 시 기본 적으로 실행되는 과정 되신 Handler가 가로채서 그 이후 처리를 하게 만듬 -->
		<!-- <security:access-denied-handler error-page="/accessError"/> -->
		<security:access-denied-handler ref="customAccessDenied"/>
		
		<!-- csrf를 해당 프로젝트에서 비활성화 -->
		<security:csrf disabled="true"/>
	</security:http>
	
	<!-- 사용자 인증 관리 -->
	<security:authentication-manager>
		<security:authentication-provider>
			<!-- data-source 커넥션 풀을 관리하는 객체 -->
			<security:jdbc-user-service data-source-ref="dataSource" 
			users-by-username-query="select userid, userpw, enabled from tbl_member where userid=?"
			authorities-by-username-query="select userid, auth from tbl_member_auth where userid=?"/>
			<security:password-encoder ref="bcryptPasswordEncoder"/>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
