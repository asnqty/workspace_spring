<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.chan.mapper.BoardAttachMapper">
	<!-- 파일 등록 -->
	<insert id="insert" parameterType="org.chan.domain.BoardAttachVO">
		INSERT INTO tbl_attach VALUES (#{uuid}, #{uploadPath}, #{fileName}, #{bno})
	</insert>
	
	<!-- 파일 삭제 -->
	<delete id="delete" parameterType="String">
		DELETE FROM tbl_attach WHERE uuid=#{uuid}
	</delete>
	
	<!-- 파일 불러오기 -->
	<select id="findByBno" parameterType="int" resultType="org.chan.domain.BoardAttachVO">
		SELECT * FROM tbl_attach WHERE bno=#{bno}
	</select>
	
</mapper>